{
	"info": {
		"name": "Furniture API",
		"description": "API collection for the Furniture configurator backend. Auth uses httpOnly cookies â€” tokens are set/cleared automatically via Set-Cookie headers.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "apiPrefix",
			"value": "/api/v1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}{{apiPrefix}}/health",
							"host": ["{{baseUrl}}{{apiPrefix}}"],
							"path": ["health"]
						},
						"auth": {
							"type": "noauth"
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has success true', function () {",
									"    const json = pm.response.json();",
									"    pm.expect(json.success).to.eql(true);",
									"});"
								]
							}
						}
					]
				}
			]
		},
		{
			"name": "Auth",
			"description": "Authentication endpoints. Tokens are managed via httpOnly signed cookies. After login/register, Postman automatically stores cookies for subsequent requests.",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john@example.com\",\n    \"phone\": \"+995555123456\",\n    \"password\": \"Password123!\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}{{apiPrefix}}/auth/register",
							"host": ["{{baseUrl}}{{apiPrefix}}"],
							"path": ["auth", "register"]
						},
						"auth": {
							"type": "noauth"
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 201', function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('Response has user data (no tokens in body)', function () {",
									"    const json = pm.response.json();",
									"    pm.expect(json.success).to.eql(true);",
									"    pm.expect(json.data.user).to.have.property('id');",
									"    pm.expect(json.data.user).to.have.property('email');",
									"    pm.expect(json.data).to.not.have.property('tokens');",
									"});",
									"",
									"pm.test('Set-Cookie headers are present', function () {",
									"    const cookies = pm.response.headers.filter(h => h.key.toLowerCase() === 'set-cookie');",
									"    pm.expect(cookies.length).to.be.greaterThan(0);",
									"});"
								]
							}
						}
					]
				},
